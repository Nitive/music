@import 'normalize-styl/normalize'

visualization_height = 200px
equalizer_height = 30px
control_panel_height = 40px
player_width = 500px

fast = .3s

body
	background #30485f
	font-weight 300
	font-size 14px




gradation(rule, color, dark = false, hover = 2%, active = 4%)
	func = tint
	if dark
		func = shade

	rule color
	&:hover
		rule func(color, hover)
	&:active
		rule func(color, active)



.music-player
	margin 70px auto
	width player_width

	overflow hidden
	border-radius 5px
	color #87aacb
	box-shadow 0 0 15px alpha(#09131d, .5)
	font-size .9em




.visualization
	position relative
	height visualization_height

	&__line
		cursor pointer
		absolute bottom -2px
		height 2px
		background #50e3c2
		&:after
			content ''
			display inline-block
			height 20px
			margin-top (@height / -2)
			width player_width

	&__select
		cursor pointer
		size 100%
		background alpha(#09131d, .7)
		opacity 0
		transition opacity fast
		text-align center
		&:not(.active):hover
			opacity 1
			.visualization__file-btn
				opacity 1
		&.active
			opacity 1
			.visualization__outline
				opacity 1

	&__outline
		opacity 0
		pointer-events none
		absolute top left
		box-sizing border-box
		offset = 20px
		margin (offset / 2)
		height visualization_height - offset
		line-height visualization_height - offset
		width player_width - offset
		border-radius 5px
		border 2px dashed #87aacb
		text-align center


	&__file-btn
		margin-top 82px
		display inline-block
		padding 8px 15px
		transition opacity fast
		opacity 0

		transition background fast
		gradation background alpha(#283d51, .6) // dark = false, hover = 2%, active = 4%)
		font-size 1.2em
		border-radius 5px
		box-shadow 0 0 15px 5px alpha(#09131d, .5)

		&:after
			content 'Or drag and drop it to here'
			absolute top 120px left
			width player_width

			pointer-events none
			text-align center
			font-size .8em
			font-style italic
			color shade(#87aacb, 40%)

#vcanvas
	absolute top
	z-index -1
	border-radius 5px 5px 0 0
	background #09131d




.control-panel
	background #121f2b
	padding 6px 15px 4px

	&__play
		background url(images/play.svg) no-repeat
	&__pause
		background url(images/pause.svg) no-repeat
	&__stop
		background url(images/stop.svg) no-repeat
	&__play, &__pause, &__stop
		size 18px
		background-size cover
		display inline-block
		margin 5px
		&:hover
			opacity .8
		&:active
			opacity .6

	&__song-name
		white-space no-wrap
		width 400px
		line-height control_panel_height - 10px // exclude .control-panel padding
		float right

		text-align center
		font-size 1.1em



$equalizer__btn
	display inline-block
	width 20%
	transition background fast
	gradation background, #121f2b
	&--active
		gradation background, #09131d

.equalizer
	cursor pointer
	line-height equalizer_height
	text-align center
	border-top 1px solid #283d51

	for btn in 'normal' 'pop' 'rock' 'reggae' 'classic'
		&__{btn}
			@extend $equalizer__btn


